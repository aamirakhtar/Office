@model List<Employee>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        <label>@ViewBag.msg</label>
        <label>No. of records (@Model.Count)</label>
        <table>
            <tr>
                <td>Name</td>
                <td>DepartmentId</td>
                <td>Age</td>
                <td>Designation</td>
                <td>Address</td>
                <td>Gender</td>
                <td></td>
            </tr>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Name</td>
                    <td>@employee.DepartmentId</td>
                    <td>@employee.Age</td>
                    <td>@employee.Designation</td>
                    <td>@employee.Address</td>
                    <td>@employee.Gender</td>
                    <td>
                        <a href="/Employee/EditEmployee?id=@employee.Id">Edit</a> |
                        <a href="/Employee/DeleteEmployee?id=@employee.Id" onclick="return OnDelete()">Delete</a> | 
                        <a href="/Employee/Details?id=@employee.Id">Details</a>
                    </td>
                </tr>
            }
        </table>
        <br />
        <a href="CreateEmployee">Create Employee</a>
    </div>
</body>
</html>

<script type="text/javascript">
    function OnDelete() {
        if (!confirm("Are you sure to delete this record?")) {
            return false;
        }
    }
</script>